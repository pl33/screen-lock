<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="compose"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher_round"
        android:shortcutShortLabel="@string/shortcut_settings_title"
        android:shortcutLongLabel="@string/shortcut_settings_title"
        android:shortcutDisabledMessage="@string/shortcut_settings_title">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="de.philipple.screen_lock"
            android:targetClass="de.philipple.screen_lock.SettingsActivity" />
        <categories android:name="android.shortcut.conversation" />
        <capability-binding android:key="actions.intent.CREATE_MESSAGE" />
    </shortcut>
    <!-- Specify more shortcuts here. -->
</shortcuts>
